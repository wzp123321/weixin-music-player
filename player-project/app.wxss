@import './assets/iconfont/iconfont.wxss';

page {
  width: 100%;
  height: 100%;

  /* 主题 */
  --music-color-primary: #f53f3f;
  --music-color-default: #fff;

  /* 字体颜色 */
  --music-color-font: black !important;
