.search-initial {
  width: 100%;
  height: 100%;
}

.search-initial .si-record-title {
  font-size: var(--music-font-36);
  color: var(--music-color-font-title);
  font-weight: 600;
  margin: 36rpx 0;
}

.search-initial .si-hot-title {
  margin-top: 54rpx;
}

.search-initial .si-record-list {
  display: flex;
  flex-wrap: wrap;
  padding: 0 8rpx;
  gap: 16rpx;
  margin-bottom: 80rpx;
}

.search-initial .si-record-list .si-record-list-item {
  padding: 8rpx 32rpx;
  background-color: var(--music-border-color);
  border-radius: 32rpx;
  font-size: 28rpx;
  color: var(--music-color-font-title);
}

.search-initial .si-hot-list {
  display: flex;
  flex-direction: column;
  gap: 32rpx;
  padding-left: 16rpx;
  font-size: 28rpx;
}

.search-initial .si-hot-list .si-hot-list-item {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  gap: 36rpx;
  color: var(--music-color-font-title);
}

.search-initial .si-hot-list .si-hot-list-item .si-hot-list-item-sort {
  font-size: 36rpx;
  font-weight: 600;
  color: var(--music-text-color-secondary);
}

.search-initial .si-hot-list .si-hot-list-item:nth-child(1) .si-hot-list-item-sort {
  color: var(--music-color-danger);
}

.search-initial .si-hot-list .si-hot-list-item:nth-child(2) .si-hot-list-item-sort {
  color: var(--music-color-warning);
}

.search-initial .si-hot-list .si-hot-list-item:nth-child(3) .si-hot-list-item-sort {
  color: var(--music-rate-active);
}

.search-initial .si-hot-list .si-hot-list-item .si-hot-list-item-content {
  display: flex;
  flex-direction: column;
  flex: auto;
  gap: 10rpx;
}

.search-initial .si-hot-list .si-hot-list-item .si-hot-list-item-content .header {
  display: flex;
  gap: 24rpx;
}

.search-initial .si-hot-list .si-hot-list-item .si-hot-list-item-content .header .icon {
  width: 36rpx;
  height: 36rpx;
}

.search-initial .si-hot-list .si-hot-list-item .si-hot-list-item-content .content {
  font-size: 22rpx;
  color: var(--music-color-info);
}

.search-initial .si-hot-list .si-hot-list-item .si-hot-list-item-score {
  font-size: 20rpx;
  color: var(--music-color-info);
}
