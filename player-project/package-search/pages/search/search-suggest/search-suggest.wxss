.search-suggest {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.search-suggest .ss-item {
  display: flex;
  align-items: center;
  gap: 32rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid var(--music-color-font-border);
  color: var(--music-color-font-primary);
}

.search-suggest .ss-item .iconfont {
  font-size: 32rpx;
}

.search-suggest .ss-item .ss-item-content {
  font-size: 28rpx;
}
