.mv-detail {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
}

.mv-detail .md-detail-main {
  background-color: #262626;
  padding-bottom: var(--music-space-24);
}

.mv-detail .md-detail-main video {
  height: 400rpx;
  width: 100%;
  margin: 0 auto;
  border-radius: var(--music-space-10);
}

.mv-detail .md-detail-main .md-info {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: var(--music-space-24) 0;
  font-size: var(--music-font-36);
  color: hsla(0, 0%, 100%, 0.8);
  font-weight: 600;
}

.mv-detail .md-detail-main .md-data {
  padding: 0 var(--music-space-16);
  color: hsla(0, 0%, 100%, 0.8);
  font-size: var(--music-font-32);
}

.mv-detail .md-comment{
  padding: 0 var(--music-space-24);
}

.mv-detail .md-comment-header {
  display: flex;
  align-items: flex-end;
  margin-top: var(--music-space-48);
  margin-bottom: var(--music-space-16);
}

.mv-detail .md-comment-header .title {
  font-size: var(--music-font-44);
  font-weight: 600;
}

.mv-detail .md-comment-header .count {
  margin-left: var(--music-space-10);
  font-weight: 300;
  font-size: var(--music-font-30);
}