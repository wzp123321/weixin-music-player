.common-album-card {
  position: relative;
  width: 251px;
  overflow: hidden;
}

.common-album-card .cac-title {
  color: var(--music-color-font-primary);
  font-weight: 400;
  font-size: 16px;
  height: 22px;
  line-height: 22px;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  margin-top: 16px;
}

.common-album-card .cac-cover {
  width: 251px;
  height: 195px;
  transition: all 0.75s;
  overflow: hidden;
}

.common-album-card .cac-play-count {
  margin-top: 10px;


}

.common-album-card .cac-play-count .iconfont.icon-z {
  font-size: 18px;
  margin-right: 4px;
}

.common-album-card .cac-play-count span,
.common-album-card .cac-play-count .iconfont {
  color: #999;
}

.common-album-card .cac-icon {
  position: absolute;
  left: 50%;
  top: 40%;
  transform: translate(-50%, -50%);
  width: 50px;
  height: 50px;
  text-align: center;
  background-color: var(--color-default);
  border-radius: 50%;
  cursor: pointer;
  display: none;
  transition: all 333ms;
}