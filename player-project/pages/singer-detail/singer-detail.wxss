/* pages/singer-detail/singer-detail.wxss */
@import '../../assets/iconfont/iconfont.wxss';

.singer-detail {
  width: 100%;
  height: 100%;
}

.singer-detail .sd-cover {
  position: relative;
  width: 500rpx;
  height: 420rpx;
  margin: var(--music-space-32) auto 0;
}

.singer-detail .sd-cover image {
  width: 100%;
  height: 100%;
  border-radius: var(--music-space-16);
}

.singer-detail .sd-header {
  display: flex;
  flex-direction: column;
  align-content: center;
  justify-content: center;
  text-align: center;
}

.singer-detail .sd-header .sd-header-name {
  color: var(--music-color-font-title);
  font-size: var(--music-font-64);
  padding: var(--music-space-20) 0;
  font-family: 'YuWeiShuFaXingShuJianTi';
  font-weight: 700;
}

.singer-detail .sd-header .sd-header-achievement {
  display: flex;
  gap: var(--music-space-48);
  justify-content: center;
}


.singer-detail .sd-header .sd-header-achievement .sd-header-achievement-item {
  position: relative;
  display: flex;
  justify-content: center;
  font-size: var(--music-font-28);
  gap: var(--music-space-8);
}

.singer-detail .sd-header .sd-header-achievement .sd-header-achievement-item:not(:last-child)::before{
  content: '';
  width: 2rpx;
  height: var(--music-space-32);
  background-color: var(--music-color-font-title);

  position: absolute;
  top: 50%;
  right: -16rpx;
  transform: translateY(-50%);
}

.singer-detail .sd-header .sd-header-btn{
  display: flex;
  justify-content: center;
  gap: var(--music-space-16);
  padding: var(--music-space-16) var(--music-space-32);
}

.singer-detail .sd-header .sd-header-btn van-button{
  flex: 1;
}

.singer-detail .sd-header .sd-header-btn van-button .van-button{
  width: 100%;
  padding: 0;
}